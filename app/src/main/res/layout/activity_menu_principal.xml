<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MenuPrincipalActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageLogo">

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="64dp"
            android:fontFamily="sans-serif-condensed"
            android:onClick="Manha"
            android:text="Sinais free"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-condensed"
            android:onClick="Blog"
            android:text="Resultados"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-condensed"
            android:onClick="VIP"
            android:text="Sinais VIP"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-condensed"
            android:onClick="Sobre"
            android:text="Sobre nÃ³s"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cabecalhoapp" />
</androidx.constraintlayout.widget.ConstraintLayout>